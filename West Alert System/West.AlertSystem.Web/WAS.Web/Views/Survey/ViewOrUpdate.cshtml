@model Guid;
@{
    ViewData["Title"] = "ViewOrUpdate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/was/css/Survey/create.css" rel="stylesheet" />
<link href="~/was/css/Survey/SurveyAll.css" rel="stylesheet" />
<script src="~/was/js/Survey/surveyGlobal.js"></script>
<script src="~/was/js/Survey/ratingQuestion.js"></script>

<div class="content-wrapper" style="padding-bottom:100px;">

    @if (Model == null || Model == Guid.Empty)
    {
        <input type="hidden" id="idSurveyId" value="" />
    }
    else
    {
        <input type="hidden" id="idSurveyId" value=@Model />
    }
    <input type="hidden" id="idCurrentUser" value=@User.Identity.Name.Trim().ToLower() />
    <input type="hidden" id="idCreatedBy" value="" />
    <div class="content-header">
        <div class="container">
            <div class="row mb-2">
                <div class="col-lg-2"></div>
                <div class="col-lg-8">
                    <h1 class="m-0 text-dark" id="idSurveyHead">
                        <a href="/WAS/Survey/List" title="Back to survey templates list">
                            <button type="button" class="btn btn-reset btn-default">
                                <i class="fas fa-chevron-left" aria-hidden="true"></i>
                            </button>
                        </a>
                    </h1>
                </div><!-- /.col -->
                <div class="col-lg-2"></div>
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <div class="content">
        <div class="container">
            <div class="row">
                <!-- /.col-md-6 -->
                <div class="col-lg-2"></div>
                <div class="col-lg-8 SurveyWASCreate">
                    <div class="SurveyIntroTop survey_card shadow">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group" id="idSurveySubjectParent">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group" id="idSurveyDescriptionParent">
                                    <label id="idDescriptionLabel"></label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="idSurveyContent">

                    </div>
                    <div class="col-md-12 p-0 text-md-right" id="idSurveyActionParent">
                    </div>
                </div>
                <div class="col-lg-2"></div>
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
</div>

<script src="~/was/js/Survey/survey.js"></script>