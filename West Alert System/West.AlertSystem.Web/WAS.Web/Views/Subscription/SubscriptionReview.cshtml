@model WAS.Application.Features.Subscription.GetOcrSubscriptionById.Response;
@{
    ViewData["Title"] = "SubscriptionReview";
}

<link href="~/was/css/Subscription/OcrSubscription.css" rel="stylesheet" />

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">
                        <a href="/WAS/Subscription/SubscriptionReviewList" title="Back to review list">
                            <button type="button" class="btn btn-reset btn-default">
                                <i class="fas fa-chevron-left" aria-hidden="true"></i>
                            </button>
                        </a>
                        Review Subscription
                    </h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                </div><!-- /.col -->
                <div class="col-12">
                    <div class="validateBeforeText col-12 mt-3 mb-0">
                        <i class="fas fa-exclamation mt-n1" aria-hidden="true"></i>
                        <div class="overflow-hidden">
                            <p>This has been identified and autogenerated from OCR, please review each field carefully before submitting.</p>
                        </div>
                    </div>
                    <div id="ErrorDiv" class="validateAfterWarning errorWarning mt-3 mb-0" style="display:none">
                        <i class="fas fa-times" aria-hidden="true"></i>
                        <div class="ValidateAfterText overflow-hidden">
                            <h4>Error!</h4>
                            <p id="ErrorText"></p>
                        </div>
                    </div>
                    <div id="WarningDiv" class="validateAfterWarning mt-3 mb-0" style="display:none">
                        <i class="fas fa-exclamation" aria-hidden="true"></i>
                        <div class="ValidateAfterText overflow-hidden">
                            <h4>Warning!</h4>
                            <p id="WarningText"></p>
                        </div>
                    </div>
                </div>
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <div class="content">
        <div class="container">
            <div class="row">
                <!-- /.col-md-6 -->
                <div class="col-12 bg-white OCRSubscriptionList">
                    <div class="mt-3">
                        <form action="/WAS/Subscription/OcrSubscription" method="post" autocomplete="off">
                            <input type="hidden" name="SubscriptionMode" value="Web (with OCR)" />
                            <input type="hidden" id="SubscriptionReviewId" name="SubscriptionReviewId" value="@Model.OcrSubscription.Id" />
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="embed-responsive getHeightPDF">
                                        <object data="@Model.OcrSubscription.FilePath#toolbar=0&view=Fit" type="application/pdf">
                                            <p>It appears you don't have a PDF plugin for this browser.</p>
                                        </object>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="EditOCRSubscriptionDetails mt-3 mt-md-0">
                                        <div class="SectionOCRHeader">Profile Details</div>
                                        <div class="OCRSubscriptionSection bg-light">
                                            <div class="form-group">
                                                <label for="First">First Name* <span class="ConfidenceLevel" title="First Name confidence">@Model.OcrSubscription.FirstNameConfidence%</span></label>
                                                <input type="text" class="form-control" id="FirstName" name="FirstName" value="@Model.OcrSubscription.FirstName">
                                            </div>
                                            <div class="form-group">
                                                <label for="Last">Last Name* <span class="ConfidenceLevel" title="Last Name confidence">@Model.OcrSubscription.LastNameConfidence%</span></label>
                                                <input type="text" class="form-control" id="LastName" name="LastName" value="@Model.OcrSubscription.LastName">
                                            </div>
                                            <div class="form-group">
                                                <label for="ID">Employee ID* <span class="ConfidenceLevel" title="Employee ID confidence">@Model.OcrSubscription.EmployeeIdConfidence%</span></label>
                                                <input type="text" class="form-control idOrEmailChange" id="EmployeeId" name="EmployeeId" value="@Model.OcrSubscription.EmployeeId">
                                            </div>
                                            <div class="form-group">
                                                <label for="Official">Official Email* <span class="ConfidenceLevel" title="Official Email confidence">@Model.OcrSubscription.OfficialEmailConfidence%</span></label>
                                                <input type="text" class="form-control idOrEmailChange" id="OfficialEmail" name="OfficialEmail" value="@Model.OcrSubscription.OfficialEmail">
                                            </div>
                                            <div class="form-group">
                                                <label for="Official">User ID* <span class="ConfidenceLevel" title="User ID confidence">@Model.OcrSubscription.UserIdConfidence%</span></label>
                                                <input type="text" class="form-control idOrEmailChange" id="UserId" name="UserId" value="@Model.OcrSubscription.UserId">
                                            </div>
                                        </div>
                                        <div class="SectionOCRHeader mt-2">Contact Information</div>
                                        <div class="OCRSubscriptionSection bg-light">
                                            <div class="form-group">
                                                <label for="Personal">Personal Email* <span class="ConfidenceLevel" title="Personal Email confidence">@Model.OcrSubscription.PersonalEmailConfidence%</span></label>
                                                <input type="text" class="form-control" id="PersonalEmail" name="PersonalEmail" value="@Model.OcrSubscription.PersonalEmail">
                                            </div>
                                            <div class="form-group">
                                                <label for="Home">Home Phone <span class="ConfidenceLevel" title="Home Phone confidence">@Model.OcrSubscription.HomePhoneConfidence%</span></label>
                                                <input type="text" class="form-control country-code" onpaste="return false" id="HomePhone" value="@Model.OcrSubscription.HomePhone" maxlength="13" autocomplete="off" list="autocompleteOff">
                                            </div>
                                            <div class="form-group">
                                                <label for="Mobile">Personal Mobile* <span class="ConfidenceLevel" title="Personal Mobile confidence">@Model.OcrSubscription.PersonalMobileConfidence%</span></label>
                                                <input type="text" class="form-control country-code" onpaste="return false" id="PersonalMobile" value="@Model.OcrSubscription.PersonalMobile" maxlength="13" autocomplete="off" list="autocompleteOff">
                                            </div>
                                        </div>
                                        <div class="SectionOCRHeader mt-2">Communication Preference</div>
                                        <div class="OCRSubscriptionSection bg-light LabelFontChange">
                                            <div class="form-group">
                                                <h5 class="OCRsubHeader"><img src="~/was/img/ic_Mail.svg" alt="" width="25">Email</h5>
                                                <div class="form-group clearfix row">
                                                    <div class="col-md-12 mb-2">
                                                        <div class="icheck-success d-inline" id="IsOfficialEmailParent">
                                                            @if (Model.OcrSubscription.IsOfficialEmail)
                                                            {
                                                                <input type="checkbox" id="IsOfficialEmail" name="IsOfficialEmail" checked>
                                                            }
                                                            else
                                                            {
                                                                <input type="checkbox" id="IsOfficialEmail" name="IsOfficialEmail">
                                                            }
                                                            <label class="sub-label" for="IsOfficialEmail">Work Email</label>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-12">
                                                        <div class="icheck-success d-inline" id="IsPersonalEmailParent">
                                                            @if (Model.OcrSubscription.IsPersonalEmail)
                                                            {
                                                                <input type="checkbox" id="IsPersonalEmail" name="IsPersonalEmail" checked>
                                                            }
                                                            else
                                                            {
                                                                <input type="checkbox" id="IsPersonalEmail" name="IsPersonalEmail">
                                                            }
                                                            <label class="sub-label" for="IsPersonalEmail">Personal Email</label>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <h5 class="OCRsubHeader"><img src="~/was/img/ic_Voice.svg" alt="" width="25">Voice</h5>
                                                <div class="form-group clearfix row">
                                                    <div class="col-md-12 mb-2">
                                                        <div class="icheck-success d-inline" id="IsVoiceHomePhoneParent">
                                                            @if (Model.OcrSubscription.IsVoiceHomePhone)
                                                            {
                                                                <input type="checkbox" id="IsVoiceHomePhone" name="IsVoiceHomePhone" checked>
                                                            }
                                                            else
                                                            {
                                                                <input type="checkbox" id="IsVoiceHomePhone" name="IsVoiceHomePhone">
                                                            }
                                                            <label class="sub-label" for="IsVoiceHomePhone">Home Phone</label>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-12">
                                                        <div class="icheck-success d-inline" id="IsVoicePersonalMobileParent">
                                                            @if (Model.OcrSubscription.IsVoicePersonalMobile)
                                                            {
                                                                <input type="checkbox" id="IsVoicePersonalMobile" name="IsVoicePersonalMobile" checked>
                                                            }
                                                            else
                                                            {
                                                                <input type="checkbox" id="IsVoicePersonalMobile" name="IsVoicePersonalMobile">
                                                            }
                                                            <label class="sub-label" for="IsVoicePersonalMobile">Personal Mobile <span class="ConfidenceLevel" title="Voice preference confidence">@Model.OcrSubscription.IsVoicePersonalMobileConfidence%</span></label>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <h5 class="OCRsubHeader"><img src="~/was/img/ic_text.svg" alt="" width="25">Text Messages</h5>
                                                <div class="form-group clearfix row">
                                                    <div class="col-md-12">
                                                        <div class="icheck-success d-inline" id="IsTextPersonalMobileParent">
                                                            @if (Model.OcrSubscription.IsTextPersonalMobile)
                                                            {
                                                                <input type="checkbox" id="IsTextPersonalMobile" name="IsTextPersonalMobile" checked>
                                                            }
                                                            else
                                                            {
                                                                <input type="checkbox" id="IsTextPersonalMobile" name="IsTextPersonalMobile">
                                                            }
                                                            <label class="sub-label" for="IsTextPersonalMobile">Personal Mobile <span class="ConfidenceLevel" title="Text preference confidence">@Model.OcrSubscription.IsTextPersonalMobileConfidence%</span></label>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <h5 class="OCRsubHeader"><img src="~/was/img/whatsapp.png" alt="" width="25">Whatsapp Messages</h5>
                                                <div class="form-group clearfix ck-top row">
                                                    <div class="col-md-12">
                                                        <div class="icheck-success d-inline" id="IsWatsAppPersonalMobileParent">
                                                            @if (Model.OcrSubscription.IsWhatsAppPersonalMobile)
                                                            {
                                                                <input type="checkbox" id="IsWatsAppPersonalMobile" name="IsWhatsAppPersonalMobile" checked>
                                                            }
                                                            else
                                                            {
                                                                <input type="checkbox" id="IsWatsAppPersonalMobile" name="IsWhatsAppPersonalMobile">
                                                            }
                                                            <label class="sub-label" for="IsWatsAppPersonalMobile">Personal Mobile <span class="ConfidenceLevel" title="Whatsapp preference confidence">@Model.OcrSubscription.IsWhatsAppPersonalMobileConfidence%</span></label>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="OCRSubscriptionSection bg-light LabelFontChange">
                                            <div class="form-group">
                                                <h5 class="OCRsubHeader">Acknowledgement & Consent <span class="ConfidenceLevel" title="Consent confidence">@Model.OcrSubscription.ConsentConfidence%</span></h5>
                                                <div class="icheck-success d-inline position-relative">
                                                    @if (Model.OcrSubscription.IsWhatsAppPersonalMobile)
                                                    {
                                                        <input type="checkbox" id="IsConsentYes" name="IsConsentYes" checked>
                                                    }
                                                    else
                                                    {
                                                        <input type="checkbox" id="IsConsentYes" name="IsConsentYes">
                                                    }
                                                    <label class="sub-label LabelforConsent" for="IsConsentYes"></label>
                                                    User has authorized West to use West Alert System to send company/work-related communications to user on personal devices and personal communication identifiers until user revoke the authorization.
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="SubmitOCRsubscription container mt-4 row p-0">
                                    <div class="col-md-12 text-right p-0">
                                        <button type="button" class="btn btn-danger mr-2" id="idDiscardSubscription" onclick="DiscardSubscription()">Discard</button>
                                        <button type="button" class="btn btn-warning mr-2" id="ClearContent">Clear</button>
                                        <button type="button" class="btn btn-primary" id="idValidateSubscription" onclick="ValidateSubscription()">Validate</button>
                                        <button type="submit" class="btn btn-success" id="SubmitSubscription" style="display:none">Submit</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content -->
</div>

<script>
    $(window).on('load', function () {
        populateDialCodeWithFlag($(".country-code"));
    });
    $(".EditOCRSubscriptionDetails").css({ 'height': ($(".getHeightPDF").outerHeight() + 'px') });
</script>
<script src="~/was/js/Subscription/OcrSubscription.js"></script>