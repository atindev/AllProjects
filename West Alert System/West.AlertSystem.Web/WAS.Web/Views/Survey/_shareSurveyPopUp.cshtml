<div class="modal fade" id="modal-shareSurvey">
    <form action="/WAS/Survey/ShareSurvey" method="post" autocomplete="off">
        <div class="modal-dialog text-center modal-md">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body pt-0">
                    <i class="fas fa-share alertButtonModal secondary" aria-hidden="true"></i>
                    <div id="idSharedPeople" style="display:none">
                        <p class="h5 mb-4 pr-2 pl-2">This survey is shared with below people:</p>
                        <span id="sharedNames"></span>
                    </div>
                    <p class="h5 mb-4 pr-2 pl-2" id="idShareSurveyText">Please select the people you want to share this survey</p>
                    <div class="form-group" id="idShareForPeople">
                        <div class="form-group" id="idselectForADPeople">
                            <select id="idSelectADPeople" name="PeopleMail"
                                    class="select2" multiple="multiple" data-placeholder="Select one or multiple AD people" style="width: 100%;">
                            </select>
                        </div>
                    </div>
                </div>
                <input type="hidden" value="" id="idSurveyIdForShare" name="BroadcastId" />
                <div class="modal-footer justify-content-center border-top-0 pt-0 mb-2">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-warning" id="idSurveyShareConfirm">Confirm</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </form>
</div>