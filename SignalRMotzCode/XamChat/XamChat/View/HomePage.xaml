            android:TabbedPage.BarItemColor="{StaticResource PrimaryColor}"
            android:TabbedPage.BarSelectedItemColor="{StaticResource SecondaryColor}"
            android:TabbedPage.IsSwipePagingEnabled="False"
            xmlns:pages="clr-namespace:XamChat.View"
            x:Class="XamChat.View.HomePage">
    <pages:XamChatNavigationPage Title="Dashboard"
                    Icon="{OnPlatform Android=tab_dashboard, iOS=tab_dashboard}">
        <x:Arguments>
            <pages:MainPage />
        </x:Arguments>
    </pages:XamChatNavigationPage>
