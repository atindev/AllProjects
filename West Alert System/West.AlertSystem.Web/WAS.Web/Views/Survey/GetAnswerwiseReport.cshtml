@model Guid;

@{
    ViewData["Title"] = ViewBag.subject + " - Insights";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<link href="~/was/css/Survey/answerwiseReport.css" rel="stylesheet" />
<link href="~/was/css/Survey/broadcastDetails.css" rel="stylesheet" />
@*style for syncfusion -1 *@
<link href="~/was/lib/syncfusion-v1/styles/ej.web.all.compatibility.min.css" rel="stylesheet">
<div class="content-wrapper">
    <div class="content-header">
        <div class="container">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">
                        <a href="/WAS/Survey/List?&defaultTab=broadcast" title="Back to broadcasted surveys list">
                            <button type="button" class="btn btn-reset btn-default">
                                <i class="fas fa-chevron-left" aria-hidden="true"></i>
                            </button>
                        </a>Survey
                    </h1>
                </div>
                <div class="col-sm-6">

                </div><!-- /.col -->

            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>

    <div class="content">
        <div class="container p-0">

            <input type="hidden" id="idBroadcastId" value="@Model" />

            @if (Model != Guid.Empty)
            {

                <div class="col-sm-12 p-0" id="idBasicDetails">
                    <div class="col-12">
                        <div class="card shadow">
                            <div class="steps-img classAlignCenter AlignSpinnerFlex"><img src="~/was/img/ajax_loader_was.svg" alt="loading image" /></div>
                            <br />
                        </div>
                    </div>
                </div>
            }
            <div class="col-md-12">
                <ul class="nav nav-tabs" id="custom-content-below-tab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="custom-content-below-profile-tab" data-toggle="pill" href="#custom-content-below-profile" role="tab" aria-controls="custom-content-below-profile" aria-selected="false">Broadcast Details</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="custom-content-below-home-tab-Surveys" data-toggle="pill" href="#custom-content-below-home-Surveys" role="tab" aria-controls="custom-content-below-home-Surveys" aria-selected="true">Survey Insights</a>
                    </li>
                </ul>
            </div>
            <br />
            <div class="tab-content" id="custom-content-below-tabContent">
                <div class="tab-pane fade active show" id="custom-content-below-profile" role="tabpanel" aria-labelledby="custom-content-below-profile-tab">
                    @{await Html.RenderPartialAsync("_BroadcastDetails");}
                </div>
                <div class="tab-pane fade" id="custom-content-below-home-Surveys" role="tabpanel" aria-labelledby="custom-content-below-home-tab-Surveys">
                    <div class="col-sm-12" id="idAnswerDetails">
                        <div class="col-12 classSubLoader">
                            <div class="card shadow">
                                <div class="steps-img classAlignCenter AlignSpinnerFlex"><img src="~/was/img/ajax_loader_was.svg" alt="loading image" /></div>
                                <br />
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-12" id="idShortAnswerDetails">
                        <div class="col-12 classSubLoader">
                            <div class="card shadow">
                                <div class="steps-img classAlignCenter AlignSpinnerFlex"><img src="~/was/img/ajax_loader_was.svg" alt="loading image" /></div>
                                <br />
                            </div>
                        </div>
                    </div>

                </div>
                <br /> <br />
            </div>
        </div>
    </div>

</div>

@*scripts for syncfusion-1 *@
<script src="~/was/lib/syncfusion-v1/scripts/jsrender.min.js"></script>
<script src="~/was/lib/syncfusion-v1/scripts/ej.web.all.min.js"></script>

<script src="~/was/js/Survey/answerwiseReport.js"></script>